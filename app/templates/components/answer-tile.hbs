{{yield}}
<div class="row">
    <div class="col-md-8 col-md-offset-2 well" id="answer-box">
        <div class="row">
            <div class="col-md-3">
                <img src="https://www.fanspole.com/assets/default_user-856f2487c07862f3089cfcb1528df354.png" class="img-responsive"> <!-- Used an image link because I still haven't found a way to link the image from the assets folder -->
            </div>
            <div class="col-md-5" id="answer-col">
                <p>{{answer.answered}}</p>
                <p id="ans-author"><em>~ by {{answer.author}}</em><span class="label label-default">{{answer.dateAnswered}}</span></p>
                <button type="button" class="btn btn-sm btn-primary" {{action 'answerUp' answer}}><span class="glyphicon glyphicon-thumbs-up"></span> {{answer.upvote}}</button>
                <button type="button" class="btn btn-sm btn-warning" {{action 'answerDown' answer}}><span class="glyphicon glyphicon-thumbs-down"></span> {{answer.downvote}}</button>
                <button type="button" class="btn btn-sm btn-danger" {{action 'delete' answer}}><span class="glyphicon glyphicon-fire"></span></button>
            </div>
        </div>
    </div>
</div>