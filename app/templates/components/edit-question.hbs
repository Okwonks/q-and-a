{{yield}}
{{#if editQuestionForm}}
<h4>Edit {{question.author}}'s question</h4>
<div>
    <form>
        <div class="form-group">
            {{input value=author id="author" placeholder=question.author}}
        </div>
        <div class="form-group">
            {{input value=asked id="asked" placeholder=question.asked}}
        </div>
        <div class="form-group">
            {{input value=notes id="notes" placeholder=question.notes}}
        </div>

        <button class="btn btn-success" {{action 'edit' question}}>Save</button><br><br>
    </form>
</div>
{{else}}
<button class="btn btn-warning btn-xs" {{action 'editQuestionForm'}}>Edit</button><br><br>
{{/if}}