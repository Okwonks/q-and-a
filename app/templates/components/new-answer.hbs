{{yield}}
{{#if addNewAnswer}}
<h3>Give an answer</h3>
<div>
    <form>
        <div class="from-group">
            {{!-- <label for=author>Your Name:</label> --}}
            {{input value=author id="author" placeholder="Name please..."}}
        </div>
        <div class="form-group">
            {{input value=answer id="answer" placeholder="Your answer here..."}}
        </div>

        <button class="btn btn-success btn-sm" {{action 'saveAnswer'}}>Answer!</button>
    </form>
</div>
{{else}}
<button class="btn btn-info btn-sm" {{action 'answerFormShow'}}>Answer Me!</button>
{{/if}}